{
  "name": "devcontainer-init",
  "version": "1.0.0",
  "description": "CLI pour initialiser des devcontainers avec support Node.js, Python et Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "devcontainer-init": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --compile --outfile bin/devcontainer-init",
    "build:npm": "bun build src/index.ts --outdir dist --target node && sed -i '' '1s|#!/usr/bin/env bun|#!/usr/bin/env node|' dist/index.js",
    "prepublishOnly": "bun run build:npm",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun test",
    "prepare": "lefthook install"
  },
  "keywords": [
    "devcontainer",
    "cli",
    "docker",
    "vscode",
    "claude",
    "bun"
  ],
  "author": "Drilmo",
  "license": "MIT",
  "engines": {
    "node": ">=20.12.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.6.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "lefthook": "^1.11.5",
    "typescript": "^5.9.3"
  }
}
