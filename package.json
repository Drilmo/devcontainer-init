{
  "name": "devcontainer-init",
  "version": "1.0.0",
  "description": "CLI pour initialiser des devcontainers avec support Node.js, Python et Claude Code",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "devcontainer-init": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/devcontainer-init",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun test",
    "prepare": "lefthook install"
  },
  "keywords": [
    "devcontainer",
    "cli",
    "docker",
    "vscode",
    "claude",
    "bun"
  ],
  "author": "Jeremy Beutin",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.6.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "lefthook": "^1.11.5",
    "typescript": "^5.9.3"
  }
}
